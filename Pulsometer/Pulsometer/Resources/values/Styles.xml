<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar" >
    <item name="colorPrimary">@color/primary</item>
    <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name ="color">@color/light_grey</item>
    <item name ="spinBars">true</item>
  </style>

  <style name="header">
    <item name="android:layout_width" >wrap_content</item>
    <item name="android:layout_height" >wrap_content</item>
    <item name="android:textSize">24dip</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="optionToogle">
    <item name="android:checked">false</item>
    <item name="android:textOff"></item>
    <item name="android:textOn"></item>
    <item name="android:layout_width">50dp</item>
    <item name="android:layout_height">50dp</item>
  </style>
  
  <style name="optionDescription">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12dp</item>
  </style>

  <style name="option">
    <item name="android:layout_marginRight">8dp</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginBottom">16dp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="optionsHeader">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12dp</item>
    <item name="android:paddingTop">48dp</item>
  </style>
</resources>