<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar" >
    <item name="colorPrimary">@color/primary</item>
    <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name ="color">@color/light_grey</item>
    <item name ="spinBars">true</item>
  </style>

  <style name="header">
    <item name="android:layout_width" >wrap_content</item>
    <item name="android:layout_height" >wrap_content</item>
    <item name="android:textSize">24dip</item>
    <item name="android:textColor">@color/black</item>
  </style>
</resources>